{
  "version": "2",
  "templates":
  [
    {
      "type": 3,
      "title": "WordPress",
      "description": "Plantilla para editar un sitio wordpress",
      "note": "Please provide the site details.",
      "categories": ["CMS"],
      "platform": "linux",
      "logo": "https://upload.wikimedia.org/wikipedia/commons/2/20/WordPress_logo.svg",
      "repository": {
        "url": "https://github.com/pablosalgador/portainer-templates",
        "stackfile": "stacks/wordpress/docker-compose.yml"
      },
      "env": [
        {
          "name": "WORDPRESS_PORT",
          "label": "Puerto",
          "default": "8001"
        },
        {
          "name": "WORDPRESS_DB_USER",
          "label": "DB - User",
          "default": "usuario"
        },
        {
          "name": "WORDPRESS_DB_PASSWORD",
          "label": "DB - Password",
          "default": "cambiame_abcd1234.-"
        },
        {
          "name": "WORDPRESS_DB_NAME",
          "label": "DB Name",
          "default": "wordpress"
        },
        {
          "name": "WORDPRESS_SITE_TITLE",
          "label": "WP Site Title",
          "default": "Mi sitio wordpress"
        },
        {
          "name": "WORDPRESS_ADMIN_USER",
          "label": "WP Admin Username",
          "default": "admin"
        },
        {
          "name": "WORDPRESS_ADMIN_PASSWORD",
          "label": "WP Admin Password",
          "default": "cambiame_abcd1234.-"
        },
        {
          "name": "WORDPRESS_ADMIN_EMAIL",
          "label": "WP Admin Email",
          "default": "admin@example.org"
        },
        {
          "name": "WORDPRESS_URL",
          "label": "Wordpress url",
          "default": "http://localhost"
        }
      ]
    }
  ]
}

